<div class="input-group mb-3">
  <div class="input-group-text p-0">
    <select
      id="search-category"
      class="form-select form-select-lg shadow-none bg-light border-0"
    >
      <option>All</option>
      <option>Title</option>
      <option>Author</option>
      <option>Subject</option>
    </select>
  </div>
  <input
    id="search-bar"
    type="text"
    class="form-control"
    placeholder="Search Here"
  />
  <button
    id="search-button"
    class="input-group-text shadow-none px-4 btn-primary"
  >Search
  </button>
</div>

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Review:</h3>

    <form class="form new-review-form">
      <div class="form-group">
        <label for="book-name">Book Name:</label>
        <input
          class="form-input"
          type="text"
          id="book-name"
          name="book-name"
        />
      </div>
      <div class="form-group">
        <label for="star-rating">Star Rating:</label>
        <input
          class="form-input"
          type="number"
          id="star-rating"
          name="star-rating"
        />
      </div>
      <div class="form-group">
        <label for="book-review">Write Your Review:</label>
        <textarea
          class="form-input"
          id="book-review"
          name="book-review"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Review</button>
      </div>
    </form>
  </div>

