    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
  </head>
  <body>

    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
          <div class="nav-logo"> <img id="logo" src="./images/bookLogo01.png"
              style="height: 80px; width:220px;"/></div>
          <h1 class="navbar-brand" style="font-size: 30px;"><span style="font-size: 50px; color:rgb(223, 68, 63);">W</span><span style="color:rgb(230, 75, 75);">elp</span> Reviews</h1>

          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarCollapse">

            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="home"
                >Home</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="browse"
                >Browse</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="#"
                >Rewards</a>
              </li>
            </ul>

            <form class="d-flex nav-search">
              <div class="input-group-text p-0">
                <select
                  id="search-category"
                  class="form-select form-select-lg shadow-none bg-input border-0"
                >
                  <option>All</option>
                  <option>Title</option>
                  <option>Author</option>
                  <option>Subject</option>
                </select>
              </div>
              <input
                id="search-bar"
                class="form-control me-2 search-bar"
                type="text"
                placeholder="Search Here"
                aria-label="Search"
              />
              <button
                id="search-button"
                class="input-group-text shadow-none px-4 btn-primary"
                type="submit"
              >Search</button>
              <a href="/profile"><i class="uil uil-user-circle user-icon"></i></a>
              <button class="btn-light log-out"> Log Out </button>
            </form>

          </div>
        </div>
      </nav>
    </header>


    <div class="flex-column justify-space-around" style="height: fit-content;">
      <header class="display-flex justify-space-between align-center p-2">
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href="/profile">profile</a>
            |
            <button class="no-button" id="logout">logout</button>
          {{else}}
            <a href="/login"></a>
          {{/if}}
        </nav>
      </header>
      <main class="main-container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      
    </div>


    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

