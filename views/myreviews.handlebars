<div class="row mt-4 main-review-card">
  <div class="row-md-6">
    <h3>My Reviews</h3>
    {{#each reviews as |review|}}
      <div class="new-review-card">
        <h5 class="new-review-card-title">{{review.title}}</h5>
          
        <div class="new-review-card-header">
          {{review.date_created}}
        </div>
        <div class="new-review-card-body">
          
          <p class="new-review-card-text">{{review.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>